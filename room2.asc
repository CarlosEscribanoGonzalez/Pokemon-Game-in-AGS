// room script file
int contador = 0;
int puntitoCaliente = 0;
function hHotspot7_WalkOn()
{
 if(contador>4){
   cProtag.ChangeRoom(1, 180, 438);
  }
}

function room_Leave()
{
  a3_5__Trick3.Stop();
}


function hHotspot2_Interact()
{
   if(contador>0){
      cProtag.Say("Meses atrás te lo dejó bien claro: no te amaría hasta que fueras alguien importante.");
      contador++;
   }
}

function hHotspot3_Interact()
{
   if(contador>1){
    cProtag.Say("Al fin y al cabo eres un arrastrado. Harías lo que fuera por no estar sólo, y eso... va a ser tu tumba");
    contador++;
   } 
}

function hHotspot4_Interact()
{
   if(contador>2){
     cProtag.Say("Este nunca fue tu sueño. No eres la persona que deseabas ser. Aunque, llegados a este punto, no puedes dar marcha atrás.");
     contador++;
   }
}

function hHotspot5_Interact()
{
   if(contador>3){
     cProtag.Say("Adelante, termina de adornarte con esos logros vacíos y proclama ser alguien que no eres. Sigue buscando esa patética aceptación social.");
     cProtag.Say("Das pena.");
     contador++;
   }
}

function h1_Interact()
{
cProtag.Say("Estás cerca de conseguirlo. Por fin conseguirás tu última medalla y podrás volver a tu pueblo, con ella.");
contador++;
}



function hHotspot8_WalkOn()
{
  puntitoCaliente++;
  if(puntitoCaliente == 1){
    cProtag.Say("Vaya... ¡Qué estatuas tan peculiares! Hay algo escrito en ellas.");
  } 
}

function room_FirstLoad()
{
  a3_5__Trick3.Play();
}
